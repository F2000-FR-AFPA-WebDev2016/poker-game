{% extends "::base.html.twig" %}

{% block title %}{{parent()}}Bienvenue{% endblock %}



{% block stylesheets %}
    <link rel="stylesheet" type="text/css" href="{{ asset('env/css/style.css') }}" />
    <link rel="stylesheet" type="text/css" href="{{ asset('env/css/styleUser.css') }}" />
{% endblock %}

{% block header %}

    {% if app.request.session.get("user") %}
        {{include('AfpaPokerGameBundle:User:menuTemplate.html.twig')}}
    {% else %}
        <ul id="lien">
            <li><a href="{{ path('_register') }}">S'enregistrer</a></li>
        </ul>

        <form action="{{ path('_login') }}" method="POST">
            <ul id="connection">
                <li>{{form_widget(form.mail)}}</li>
                <li>{{form_widget(form.password)}}</li>
                <li>{{form_widget(form.save)}}</li>
            </ul>
        </form>
    {% endif %}
{% endblock %}
{% block body %}
    <section id="audio">
        <audio src="{{ asset('env/audio/') }}"  autoplay ></audio>
    </section>

    <section id="firstImg" class="loading">
        <img src="{{ asset('env/images/acc1.jpg') }}" alt="photo accueil eteinte">
    </section>
    <section id="secondImg" class="loading">
        <img src="{{ asset('env/images/acc2.jpg') }}" alt="photo accueil allume">
    </section>



{% endblock %}


{% block javascripts %}
    {{parent()}}
    <script src="{{ asset('env/js/main.js') }}" type="text/javascript"></script>
{% endblock %}