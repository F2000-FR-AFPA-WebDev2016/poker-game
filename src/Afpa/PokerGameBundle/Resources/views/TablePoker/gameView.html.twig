                </div>
                <div class="plus"></div>
            </div>

            <div id="playSuiv" class="egalite">
                <p> Egalite entre
                    
                    {% for line2 in line.egaliteMain %}
                    <span class="{{line2}}">{{line2}}</span>
                    {%endfor%}
                    ils se partagent {{gagnant.0.pot}} jetons
                </p>
            </div>
        {%endif%}
    {% endfor %}
{%endif%}

