{% extends "::base.html.twig" %}

{% block title %}{{parent()}}Register{% endblock %}

{% block stylesheets %}
    <link rel="stylesheet" type="text/css" href="{{ asset('env/css/style.css') }}" />
{% endblock %}

{% block header %}
    {% if app.request.session.get("user") %}
        {{include('AfpaPokerGameBundle:User:menuTemplate.html.twig')}}
    {% else %}
        <ul id="lien">
            <li><a href="{{ path('_home') }}">Accueil</a></li>
        </ul>

        {{ render(controller('AfpaPokerGameBundle:User:login')) }}
    {% endif %}
    
{% endblock %}

{% block body %}
    
    
    
    <section id ="register">
        {% set flash_message_notice = app.session.flashBag.get('notice')|last %}
        <p class="notice">{{ flash_message_notice }}</p>
        {% set flash_message_warning = app.session.flashBag.get('warning')|last %}
        <p class="warning">{{ flash_message_warning }}</p>
            {#<form method="POST" >
                {{form_widget(form)}}
            </form>#}
            {{ form_start(form) }}
        <ul >
            <li>{{form_widget(form.pseudo)}}</li>
            <li>{{form_widget(form.password)}}</li>
            <li>{{form_widget(form.mail)}}</li>
            <li>{{form_widget(form.submit)}}</li>
        </ul>
        {{ form_end(form) }}
    </section>





{% endblock %}
