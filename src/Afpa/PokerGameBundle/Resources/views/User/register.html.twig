{% extends "::base.html.twig" %}

{% block title %}{{parent()}}Register{% endblock %}

{% block stylesheets %}
    <link rel="stylesheet" type="text/css" href="{{ asset('env/css/style.css') }}" />
    <link rel="stylesheet" type="text/css" href="{{ asset('env/css/styleUser.css') }}" />
{% endblock %}

{% block header %}

    {% if app.request.session.get("user") %}
        {{include('AfpaPokerGameBundle:User:menuTemplate.html.twig')}}
    {% else %}
        <ul id="lien">
            <li><a href="{{ path('home') }}">Accueil</a></li>
        </ul>

        <form action="{{ path('_login') }}" method="POST">
            <ul id="connection">
                <li>{{form_widget(form2.mail)}}</li>
                <li>{{form_widget(form2.password)}}</li>
                <li>{{form_widget(form2.save)}}</li>
            </ul>
        </form>
    {% endif %}
{% endblock %}

{% block body %}
    <section id ="register">
        {% set flash_message = app.session.flashBag.get('notice')|last %}


        <p>{{ flash_message }}<p>
            {#<form method="POST" >
                {{form_widget(form)}}
            </form>#}
            {{ form_start(form) }}
        <ul >
            <li>{{form_widget(form.pseudo)}}</li>
            <li>{{form_widget(form.password)}}</li>
            <li>{{form_widget(form.mail)}}</li>
            <li>{{form_widget(form.submit)}}</li>
        </ul>
        {{ form_end(form) }}
    </section>





{% endblock %}
